<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="ca.cmpt276.prj">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity
            android:name=".ui.CreditsActivity"
            android:label="@string/title_credits_activity"
            android:parentActivityName=".ui.HelpActivity" />
        <activity
            android:name=".ui.HighScoresActivity"
            android:label="@string/title_high_scores_activity"
            android:configChanges="keyboard|orientation|keyboardHidden|screenSize"
            android:parentActivityName=".ui.MainMenuActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ui.GameActivity"
            android:configChanges="keyboard|orientation|keyboardHidden|screenSize"
            android:parentActivityName=".ui.MainMenuActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ui.OptionsActivity"
            android:label="@string/title_options_activity"
            android:configChanges="keyboard|orientation|keyboardHidden|screenSize"
            android:parentActivityName=".ui.MainMenuActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ui.HelpActivity"
            android:label="@string/title_help_activity"
            android:configChanges="keyboard|orientation|keyboardHidden|screenSize"
            android:parentActivityName=".ui.MainMenuActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ui.PhotoGalleryActivity"
            android:label="@string/title_photo_gallery_activity"
            android:configChanges="keyboard|orientation|keyboardHidden|screenSize"
            android:parentActivityName=".ui.MainMenuActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ui.ImageSetActivity"
            android:label="@string/image_set"
            android:configChanges="keyboard|orientation|keyboardHidden|screenSize"
            android:parentActivityName=".ui.MainMenuActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ui.MainMenuActivity"
            android:configChanges="keyboard|orientation|keyboardHidden|screenSize"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ui.SplashScreenActivity"
            android:label="@string/title_main_menu_activity"
            android:configChanges="keyboard|orientation|keyboardHidden|screenSize"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>