<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.GameActivity">

    <Chronometer
        android:id="@+id/chrnTimerForScoring"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/guideline"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/guideline2" />

    <androidx.cardview.widget.CardView
        android:id="@+id/crdDrawPile"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="@dimen/cardview_margins"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/guideline">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageButton
                android:id="@+id/btnDrawIm1"
                android:layout_width="250dp"
                android:layout_height="0dp"
                android:layout_gravity="center"
                android:layout_marginStart="@dimen/image_margins"
                android:layout_marginTop="@dimen/image_margins"
                android:layout_marginEnd="@dimen/image_margins"
                android:layout_marginBottom="@dimen/image_margins"
                android:layout_weight="1"
                android:contentDescription="@string/txt_content_discardimage_3" />

            <ImageButton
                android:id="@+id/btnDrawIm2"
                android:layout_width="250dp"
                android:layout_height="0dp"
                android:layout_gravity="center"
                android:layout_marginStart="@dimen/image_margins"
                android:layout_marginTop="@dimen/image_margins"
                android:layout_marginEnd="@dimen/image_margins"
                android:layout_marginBottom="@dimen/image_margins"
                android:layout_weight="1"
                android:contentDescription="@string/txt_content_drawimage_2" />

            <ImageButton
                android:id="@+id/btnDrawIm3"
                android:layout_width="250dp"
                android:layout_height="0dp"
                android:layout_gravity="center"
                android:layout_marginStart="@dimen/image_margins"
                android:layout_marginTop="@dimen/image_margins"
                android:layout_marginEnd="@dimen/image_margins"
                android:layout_marginBottom="@dimen/image_margins"
                android:layout_weight="1"
                android:contentDescription="@string/txt_content_drawimage_3"
                android:cropToPadding="false" />
        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/crdDiscPile"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="10dp"
        app:layout_constraintBottom_toTopOf="@+id/guideline2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageButton
                android:id="@+id/btnDiscIm1"
                android:layout_width="250dp"
                android:layout_height="0dp"
                android:layout_gravity="center"
                android:layout_marginStart="@dimen/image_margins"
                android:layout_marginTop="@dimen/image_margins"
                android:layout_marginEnd="@dimen/image_margins"
                android:layout_marginBottom="@dimen/image_margins"
                android:layout_weight="1"
                android:contentDescription="@string/txt_content_discardimage_1" />

            <ImageButton
                android:id="@+id/btnDiscIm2"
                android:layout_width="250dp"
                android:layout_height="0dp"
                android:layout_gravity="center"
                android:layout_marginStart="@dimen/image_margins"
                android:layout_marginTop="@dimen/image_margins"
                android:layout_marginEnd="@dimen/image_margins"
                android:layout_marginBottom="@dimen/image_margins"
                android:layout_weight="1"
                android:contentDescription="@string/txt_content_discardimage_2" />

            <ImageButton
                android:id="@+id/btnDiscIm3"
                android:layout_width="250dp"
                android:layout_height="0dp"
                android:layout_gravity="center"
                android:layout_marginStart="@dimen/image_margins"
                android:layout_marginTop="@dimen/image_margins"
                android:layout_marginEnd="@dimen/image_margins"
                android:layout_marginBottom="@dimen/image_margins"
                android:layout_weight="1"
                android:contentDescription="@string/txt_content_discardimage_3" />
        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.43052837" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.5694716" />

</androidx.constraintlayout.widget.ConstraintLayout>