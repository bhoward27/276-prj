<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.GameActivity">

    <Chronometer
        android:id="@+id/chrnTimerForScoring"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/guideline"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/guideline2"
        app:layout_constraintVertical_bias="0.0" />

    <androidx.cardview.widget.CardView
        android:id="@+id/crdDrawPile"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="@dimen/cardview_margins"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/guideline">

        <AbsoluteLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <ImageButton
                android:id="@+id/btnDrawIm1"
                android:layout_width="@dimen/button_width"
                android:layout_height="@dimen/button_height"
                android:layout_gravity="center"
                android:layout_marginStart="14dp"
                android:layout_marginTop="43dp"
                android:layout_marginEnd="@dimen/image_margins"
                android:layout_marginBottom="@dimen/image_margins"
                android:contentDescription="@string/txt_content_discardimage_3" />

            <ImageButton
                android:id="@+id/btnDrawIm2"
                android:layout_width="@dimen/button_width"
                android:layout_height="@dimen/button_height"
                android:layout_gravity="center"
                android:layout_marginStart="154dp"
                android:layout_marginTop="88dp"
                android:layout_marginEnd="@dimen/image_margins"
                android:layout_marginBottom="@dimen/image_margins"
                android:layout_x="100dp"
                android:layout_y="56dp"
                android:contentDescription="@string/txt_content_drawimage_2" />

            <ImageButton
                android:id="@+id/btnDrawIm3"
                android:layout_width="@dimen/button_width"
                android:layout_height="@dimen/button_height"
                android:layout_gravity="center"
                android:layout_marginStart="268dp"
                android:layout_marginTop="122dp"
                android:layout_marginEnd="@dimen/image_margins"
                android:layout_marginBottom="@dimen/image_margins"
                android:layout_x="213dp"
                android:layout_y="102dp"
                android:contentDescription="@string/txt_content_drawimage_3"
                android:cropToPadding="false" />
        </AbsoluteLayout>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/crdDiscPile"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="10dp"
        app:layout_constraintBottom_toTopOf="@+id/guideline2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <AbsoluteLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageButton
                android:id="@+id/btnDiscIm1"
                android:layout_width="@dimen/button_width"
                android:layout_height="@dimen/button_height"
                android:layout_gravity="center"
                android:layout_marginStart="24dp"
                android:layout_marginTop="28dp"
                android:layout_marginEnd="@dimen/image_margins"
                android:layout_marginBottom="@dimen/image_margins"
                android:layout_x="128dp"
                android:layout_y="80dp"
                android:contentDescription="@string/txt_content_discardimage_1" />

            <ImageButton
                android:id="@+id/btnDiscIm2"
                android:layout_width="@dimen/button_width"
                android:layout_height="@dimen/button_height"
                android:layout_gravity="center"
                android:layout_marginStart="141dp"
                android:layout_marginTop="80dp"
                android:layout_marginEnd="@dimen/image_margins"
                android:layout_marginBottom="@dimen/image_margins"
                android:layout_x="16dp"
                android:layout_y="29dp"
                android:contentDescription="@string/txt_content_discardimage_2" />

            <ImageButton
                android:id="@+id/btnDiscIm3"
                android:layout_width="@dimen/button_width"
                android:layout_height="@dimen/button_height"
                android:layout_gravity="center"
                android:layout_marginStart="268dp"
                android:layout_marginTop="122dp"
                android:layout_marginEnd="@dimen/image_margins"
                android:layout_marginBottom="@dimen/image_margins"
                android:layout_x="257dp"
                android:layout_y="132dp"
                android:contentDescription="@string/txt_content_discardimage_3" />
        </AbsoluteLayout>

    </androidx.cardview.widget.CardView>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.43052837" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.5694716" />

    <TextView
        android:id="@+id/txtDiscardPile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="2dp"
        android:text="@string/txt_discard_pile"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/crdDiscPile" />

    <TextView
        android:id="@+id/txtDiscardPile2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="2dp"
        android:text="@string/txt_draw_pile"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/crdDrawPile"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/txtCardsRemaining"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:text="@string/txt_cards_remaining"
        android:textColor="@android:color/black"
        android:textSize="14sp"
        app:layout_constraintBottom_toTopOf="@+id/guideline"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>